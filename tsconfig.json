{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "sourceMap": true,
    "listFiles": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@model/*": ["api/models/*"],
      "@services/*": ["api/services/*"],
      "@controllers/*": ["api/controllers/*"],
      "@middlewares/*": ["api/middlewares/*"],
      "@routes/*": ["api/routes/*"],
    }
  }
}
